 <div class="particles" id="particles"></div>
    
    <div class="container">
     
        <main>
            <div class="register-container">
                <div class="register-card">
                    <h2>Registro</h2>
                    <form action="/api/sessions/register" method="POST">
                        <div class="form-row">
                            <div class="form-group">
                                <label for="nombre">Nombre</label>
                                <input type="text" id="nombre" name="first_name" placeholder="Juan" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="apellido">Apellido</label>
                                <input type="text" id="apellido" name="last_name" placeholder="Pérez" required>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="age">Edad</label>
                            <input type="number" id="age" name="age" placeholder="25" min="18" max="120" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Correo Electrónico</label>
                            <input type="email" id="email" name="email" placeholder="ejemplo@correo.com" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            <input type="password" id="password" name="password" placeholder="Mínimo 8 caracteres" required>
                        </div>
                        
                        <button type="submit" class="register-btn">Registrarse</button>
                    </form>
                    
                    <div class="terms">
                        Al registrarte, aceptas nuestros <a href="#">Términos y Condiciones</a> y <a href="#">Política de Privacidad</a>.
                    </div>
                    
                    <div class="login-link">
                        ¿Ya tienes una cuenta? <a href="login">Inicia sesión aquí</a>
                    </div>
                </div>
            </div>
        </main>
        
        <footer>
